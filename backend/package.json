{
  "name": "consulto-backend",
  "version": "1.0.0",
  "type": "commonjs",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",    
    "build": "tsc -p tsconfig.json",
    "start": "node build/src/index.js",
    "lint": "echo 'Add linter later'",
    "format": "prettier --write ./src/**/*.{ts,js,json,md}",
    "format:check": "prettier --check ./src/**/*.{ts,js,json,md}",
    "seed": "ts-node-dev --transpile-only src/scripts/seed.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.11.3",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "pino": "^9.3.2",
    "sequelize": "^6.37.3",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^24.1.0",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.10",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts,js,json",
    "ignore": ["node_modules"],
    "exec": "ts-node ./src/index.ts"
  }
}
